<!DOCTYPE html>
<html lang="en">

<%- include('../head.ejs'); %>

<body>

  <%- include('../header.ejs'); %>

  

  <main id="main">

    <!-- ======= Contact Section ======= -->
    <section id="create" class="contact">
      <div class="container" data-aos="fade-up">

        <div class="section-header">
          <h2>Create</h2>
          <p>Here you can submit your own problems for others to solve.</p>
        </div>

        <div class="row gx-lg-0 gy-4">

          <div class="d-flex align-items-center justify-content-center">
            <form id="createForm" action="/problem" method="post" enctype="multipart/form-data" class="php-email-form">
              <div class="form-group">
                <input type="text" name="title" id="title" class="form-control" placeholder="Title*" required>
              </div>
              <div class="form-group mt-3">
                <textarea name="description" id="description" class="form-control" rows="5" placeholder="Description"></textarea>
              </div>
              <div class="form-group mt-3">
                <input type="text" name="answer" id="answer" class="form-control" placeholder="Answer">
              </div>
              <div class="form-group mt-3">
                <input type="text" name="solution" id="solution" class="form-control" placeholder="Solution*" required>
              </div>
              <div class="row mt-3">
                <div class="col-md-6 form-group">
                  <input type="text" name="subject" id="subject" class="form-control" placeholder="Subject*" required>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <input type="text" name="tag" id="tag" class="form-control" placeholder="Tag">
                </div>
              </div>
              <div class="form-group mt-3">
                <input type="file" name="file" id="file" class="form-control" required>
              </div>
              <div class="form-group mt-3">
                <input type="text" name="createdBy" id="createdBy" class="form-control" placeholder="Created By">
              </div>
              <!-- <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Creation success!</div>
              </div> -->
              <div class="text-center"><button type="submit">Create</button></div>
            </form>
          </div><!-- End Contact Form -->

        </div>

      </div>
    </section><!-- End Contact Section -->

  </main><!-- End #main -->

  <%- include('../footer.ejs'); %>

  <script>
    $(document).ready(function() {
      // Handle form submission
      $("#createForm").submit(function(event) {
        event.preventDefault(); // Prevent the default form submission

        // Create a new FormData object to store the form data
        var formData = new FormData(this);

        // Send the AJAX request
        $.ajax({
          url: "/problem",
          type: "POST",
          data: formData,
          processData: false, // Prevent jQuery from processing the data
          contentType: false, // Prevent jQuery from setting the content type
          success: function(response) {
            // Handle the success response
            var url = response.url; // Extract the URL from the response
            window.location.href = url; // Redirect the user to the URL
          },
          error: function(jqXHR, textStatus, errorThrown) {
            // Handle the error response
            console.error(jqXHR.responseText);
            // Display an error message to the user
          }
        });
      });
    });
  </script>

</body>

</html>